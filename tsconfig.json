{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // ðŸ‘‡ THIS IS WHAT FIXES JSX ERRORS
    "jsx": "react-jsx"
  },
  "include": [
    "client",
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}